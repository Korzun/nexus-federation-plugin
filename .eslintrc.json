{
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:@typescript-eslint/eslint-recommended", "plugin:jest/recommended", "plugin:prettier/recommended"],
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["jest", "@typescript-eslint", "import"],
  "rules": {
    "no-console": "error",
    "no-alert": "error",
    "no-debugger": "error",
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ]
  }
}
